<p style="color: green"><%= notice %></p>

<h1>Toy Dashboard</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Type</th>
      <th scope="col">Inventory</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @toys.each do |toy| %>
      <tr>
        <td><%= toy.name %></td>
        <td><%= toy.description %></td>
        <td><%= number_to_currency(toy.price) %></td>
        <td><%= toy.toy_type.name %></td>
        <td><%= toy.inventory.quantity %></td>
        <td>
          <%= link_to 'Show', toy, class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_toy_path(toy), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Destroy', toy, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="toys">
  <% @toys.each do |toy| %>
    <%= render toy %>
    <p>
      <%= link_to "Show this toy", toy %>
    </p>
  <% end %>
</div>

<%= link_to "New toy", new_toy_path %>
