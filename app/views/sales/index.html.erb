<p style="color: green"><%= notice %></p>

<h1>Sales Ledger</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Toy</th>
      <th scope="col">Quantity Sold</th>
      <th scope="col">Sale Date</th>
      <th scope="col">Total Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.toy.name %></td>
        <td><%= sale.quantity_sold %></td>
        <td><%= sale.sale_date.strftime("%Y-%m-%d %H:%M:%S %Z") %></td>
        <td><%= number_to_currency(sale.total_price) %></td>
        <td>
          <%= link_to 'Show', sale, class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_sale_path(sale), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New sale", new_sale_path, class: 'btn btn-success btn-sm' %>
