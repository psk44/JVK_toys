<p style="color: green"><%= notice %></p>

<h1>Inventory</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Toy</th>
      <th scope="col">Quantity</th>
      <th scope="col">Low Inventory Threshold</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.toy.name %></td>
        <td><%= inventory.quantity %></td>
        <td><%= inventory.low_inventory_threshold %></td>
        <td>
          <%= link_to 'Show', inventory, class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_inventory_path(inventory), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New inventory", new_inventory_path, class: "btn btn-success btn-sm" %>
