<h1>Dashboard</h1>
<h2 class="mt-5"></h2>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Toy</th>
      <th>Inventory</th>
      <th>Total Worth</th>
      <th>Sold</th>
      <th>Ratings</th>
    </tr>
  </thead>
  <tbody>
    <% @toys_inventory.each do |toy| %>
      <tr>
        <td><%= toy.name %></td>
        <td><%= toy.inventory.quantity %></td>
        <td>$<%= toy.total_worth %></td>
        <td> <% total_sold = toy.sales.sum(:quantity_sold) %>
             <%= total_sold %>
        <td> <% average_rating = toy.ratings.average(:score) %>
             <%= average_rating ? number_with_precision(average_rating, precision: 2) : 'No ratings' %>     
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

