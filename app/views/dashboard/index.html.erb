<h1>Dashboard</h1>
<h2 class="mt-5"></h2>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Toy</th>
      <th>Quantity in Stock</th>
      <th>Total Worth</th>
      <th>Suppliers</th>
    </tr>
  </thead>
  <tbody>
    <% @toys_inventory.each do |toy| %>
      <tr>
        <td><%= toy.name %></td>
        <td><%= toy.inventory.quantity %></td>
        <td>$<%= toy.total_worth %></td>
        <td>
          <% toy.suppliers.each do |supplier| %>
            <%= supplier.name %><br>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

